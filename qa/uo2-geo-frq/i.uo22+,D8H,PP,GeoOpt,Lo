 # << Main Operation Parameters >>

 &TASKS
    TASK             = "GeoOpt"
    ECHO_INPUT_LEVEL = "default"
    GX_HIGHPREC      = TRUE    
    READ_GX          = f
 /TASKS

 &RECOVER_OPTIONS
    SAVE_SCFSTATE = true
    READ_SCFSTATE = true
 /RECOVER_OPTIONS

 &MAIN_OPTIONS
    SPIN_RESTRICTED     =  T # UKS
    DIRECT_ENERGY_CALC  =  TRUE # calculate all contributions to energy 
                                # separately without extra cost.
    RELATIVISTIC        =  "f"
    update_hessian_iteration = 0
    integrals_on_file   =  true
 /MAIN_OPTIONS

 &PVMOPTIONS
    N_PROCS  =  1 # number of processors
 /PVMOPTIONS

 &OUTPUT
    OUTPUT_LEVEL =  1  # normal amount of output
 /OUTPUT

 # << Geometry >>

 &SYMMETRY_GROUP
    POINT_GROUP = "D8H"
 /SYMMETRY_GROUP

 &UNIQUE_ATOM_NUMBER
    N_UNIQUE_ATOMS =   2 
 /UNIQUE_ATOM_NUMBER

 &UNIQUE_ATOM # unique atom   1
    NAME          = " U"
    Z             = 92.0
    N_equal_atoms =   1
 /UNIQUE_ATOM
    0.000000000000000E+00    0.000000000000000E+00    0.000000000000000E+00

 &UNIQUE_ATOM # unique atom  2 
    NAME          = " O"
    Z             = 8.0
    N_equal_atoms =  2 
 /UNIQUE_ATOM
#   0.000000000000000E+00    0.000000000000000E+00    3.22198
    0.000000000000000E+00    0.000000000000000E+00    3.217141364253

 # << Basis Sets >>

~U-ECP78MWB.bas
~O-ECP2MWB.bas

